<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="DefaultCard" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentPadding">@dimen/card_content_padding</item>
    </style>

    <style name="CardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/card_inner_vertical_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_inner_vertical_bottom_margin</item>
    </style>

    <style name="DefaultText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultText.Label" parent="DefaultText">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
